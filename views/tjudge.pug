extends layout

block navigation-unreg
block navigation-judge
block navigation-particip

block content
    div.container
        div.row
            div.col-10.offset-1
                h1 Список судей
        div.row
            div.col-10.offset-1
                form
                    table.table.table-striped
                        thead.thead-dark
                            tr
                                th( scope="col" contenteditable ) Судья
                                th( scope="col" contenteditable ) Кабинет
                        tbody.judge
                            tr
                                th.add-judge( scope="row" colspan="2" ) +
        div.row
            div.col-10.offset-1
                button.btn.btn-primary( type="submit" ) Сохранить изменения
                button.btn.btn-secondary( type="reset" ) Отмена