extends layout

block navigation-unreg
block navigation-judge
block navigation-particip

block content
    script( src="/javascripts/scriptMenu.js" type="text/javascript")
    .container
        .row
            .col-10.offset-1
                #list-tab.list-group( role="tablist" )
                    a.list-group-item.list-group-item-action(id="data-time-input" data-toggle="list" href="#date-time-location-tab" role="tab" aria-controls="home") Время и место проведения
                    a.list-group-item.list-group-item-action(href="/tcabinet") Кабинеты
                    a.list-group-item.list-group-item-action(href="/tleague") Лиги
                    a.list-group-item.list-group-item-action(href="/ttask") Задачи
                    a.list-group-item.list-group-item-action(href="/tparticip") Участники
                    a.list-group-item.list-group-item-action(href="/tjudge") Судьи
                    a.list-group-item.list-group-item-action(href="/tcommandcabinet") Комманды и кабинеты
                    a.list-group-item.list-group-item-action(href="/tcabinetjudge") Кабиненты и судьи
        .row
            .col-10.offset-1
                #nav-tabContent.tab-content
                    .tab-pane.fade.show( id="date-time-location-tab" role="tabpanel" aria-labelledby="data-time-input")
                        form.needs-validation
                            .form-group
                                lable Дата проведения
                                input#date.form-control(type="date" autocomplete="off" value=date required)
                            .form-group
                                lable Время проведения
                                input#time.form-control(type="time" autocomplete="off" value=time required)
                            .form-group
                                lable Место проведения
                                input#place.form-control(type=text value=place autocomplete="off" placeholder="Введите место" required)
                            .btn-group
                                button#save-DataTimePlace.btn.btn-primary(type="submit") Сохранить
                                button#cancel-DataTimePlace.btn.btn-secondary(type="reset") Отмена









