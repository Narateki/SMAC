extends layout

block navigation-unreg
block navigation-judge
block navigation-particip

block content
    .container
        .row
            .col-10.offset-1.mt-4
                h2 Участники
        .row
            .col-10.offset-1
                -console.log(commands.length);
                -for (let i=0; i < commands.name.length; i++)
                    table.table.table-striped
                        thead.thead-dark
                            tr
                                th( scope="col" contenteditable )=commands.name[i]
                                th( scope="col" contenteditable )=commands.cabinet[i]
                        tbody.particip
                            - for(let j = 0; j < commands.particips.length; j++)
                                tr
                                    th.form-control( scope="row" contenteditable colspan="2" )=commands.particips[i][j]

                            tr
                                th.add-particip( scope="row" colspan="2" ) +
        .row
            .col-10.offset-1
                .command
        .row
            .col-10.offset-1
                .add-command Добавить коммаду +
        .row
            .col-10.offset-1.mt-1
                button.mr-1#save-particip.btn.btn-primary( type="submit" ) Сохранить изменения
                button#cancel-particip.btn.btn-secondary( type="reset" ) Отмена